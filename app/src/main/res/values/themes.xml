<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JavaForAndroid2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/CalcButton</item>
        <item name="calcActionButton">@style/CalcButton.ActionCalcButton</item>
        <item name="textViewTextColor">@style/TextViewTextColor</item>
        <item name="backgroundActivity">@style/backgroundActivity</item>
        <item name="backgroundActivityLand">@style/backgroundActivityLand</item>


    </style>


    <style name="Theme.JavaForAndroid2.Dark">
        <item name="backgroundActivity">@style/backgroundActivityDark</item>
        <item name="backgroundActivityLand">@style/backgroundActivityLandDark</item>
        <item name="materialButtonStyle">@style/CalcButton.Dark</item>
        <item name="calcActionButton">@style/CalcButton.ActionCalcButtonDark</item>
        <item name="textViewTextColor">@style/TextViewTextColorDark</item>

    </style>

</resources>