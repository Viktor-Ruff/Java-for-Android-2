<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="CalcButton">

        <!--<item name="fontFamily">@font/cartoon_blocks</item>-->
        <item name="android:backgroundTint">#9E000000</item>
        <item name="android:textColor">#01F7FF</item>
        <item name="android:textSize">40sp</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="rippleColor">@color/purple_200</item>

    </style>

    <style name="CalcButton.ActionCalcButton">
        <item name="android:backgroundTint">#AE1D0325</item>
        <item name="android:textColor">#01AFFF</item>

    </style>

    <style name="CalcButton.Dark">
        <item name="android:backgroundTint">#85064A4C</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CalcButton.ActionCalcButtonDark">
        <item name="android:backgroundTint">#85064C0F</item>
        <item name="android:textColor">#000000</item>

    </style>

    <style name="TextViewTextColor">
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="TextViewTextColorDark">
        <item name="android:textColor">#16856B</item>

    </style>

    <style name="backgroundActivity">

        <item name="android:background">@drawable/wood</item>
    </style>


    <style name="backgroundActivityDark">

        <item name="android:background">@drawable/wood_dark</item>
    </style>


    <style name="backgroundActivityLand">

        <item name="android:background">@drawable/sakura</item>
    </style>


    <style name="backgroundActivityLandDark">

        <item name="android:background">@drawable/sakura_dark</item>
    </style>

